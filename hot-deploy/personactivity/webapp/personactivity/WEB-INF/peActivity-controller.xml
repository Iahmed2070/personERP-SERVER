<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://ofbiz.apache.org/Site-Conf" xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>

    <!--<include location="component://pewebview/webapp/pewebview/WEB-INF/controller.xml"/>-->
    <description>PersonActivity Component Site Configuration File</description>


    <preprocessor>
        <event name="checkTarjetaLogin" type="java" path="main.java.com.banfftech.personerp.PersonEventLoginWorker" invoke="checkTarjetaLogin"/>
    </preprocessor>


    <!-- ##################### Activity R Control #################### -->

    <!-- Query Activity List-->
    <request-map uri="queryMyEvent">
        <security https="false" auth="false" />
        <event type="service" invoke="queryMyEvent"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>

    <!-- Query Activity Detail  -->
    <request-map uri="queryMyEventDetail">
        <security https="false" auth="false" />
        <event type="service" invoke="queryMyEventDetail"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>

    <!-- Query Activity Projects -->
    <request-map uri="queryActivityProjects">
        <security https="false" auth="false" />
        <event type="service" invoke="queryActivityProjects"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>

    <!-- Query Activity Payment Info -->
    <request-map uri="queryActivityPayment">
        <security https="false" auth="false" />
        <event type="service" invoke="queryActivityPayment"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>



    <!-- ##################### Activity C Control #################### -->


    <!-- Create Activity Project -->
    <request-map uri="createActivityProject">
        <security https="false" auth="false" />
        <event type="service" invoke="createActivityProject"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>

    <!-- Create Activity -->
    <request-map uri="createNewEvent">
        <security https="false" auth="false" />
        <event type="service" invoke="createNewEvent"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>


    <!-- Create Activity Simple Payment -->
    <request-map uri="createPartyPayment">
        <security https="false" auth="false" />
        <event type="service" invoke="createPartyPaymentInfo"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>














    <!-- Request Mappings -->
    <request-map uri="main"><security https="true" auth="true"/><response name="success" type="view" value="main"/></request-map>


    <!-- Add Party & Join Activity -->
    <request-map uri="newPartyJoinActivity"><security https="false" auth="false"/>
        <event type="service" invoke="newPartyJoinActivity" />
        <response name="success" type="request-redirect" value="joinSuccess">
            <redirect-parameter name="workEffortId" from="workEffortId"/>
        </response>
        <response name="error" type="request" value="json" />
    </request-map>


    <!--JoinSuccess-->
    <request-map uri="joinSuccess">
        <security https="false" auth="false" />
        <response name="success" type="view" value="joinSuccess">
        </response>
    </request-map>






    <!-- View Mappings -->
    <view-map name="main" type="screen" page="component://personactivity/widget/PersonActivityScreens.xml#main"/>
    <view-map name="joinSuccess" type="screen" page="component://personactivity/widget/PersonActivityScreens.xml#joinSuccess"/>
</site-conf>