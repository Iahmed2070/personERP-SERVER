<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://ofbiz.apache.org/Site-Conf" xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>

    <description>PersonContacts Component Site Configuration File</description>
    
    <!-- Events to run on every request before security (chains exempt) -->

    <preprocessor>
        <event name="checkTarjetaLogin" type="java" path="main.java.com.banfftech.personerp.PersonEventLoginWorker" invoke="checkTarjetaLogin"/>
    </preprocessor>

    <!-- Events to run on every request after all other processing (chains exempt) -->
    <!--
    <postprocessor>
        <event name="test" type="java" path="org.apache.ofbiz.webapp.event.TestEvent" invoke="test"/>
    </postprocessor>
    -->

    <!-- Request Mappings -->
    <request-map uri="main">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="main"/>
   	</request-map>

    <!-- 用户app登录接口 -->
    <request-map uri="userAppLogin">
        <security https="false" auth="false" />
        <event type="service" invoke="userAppLogin" />
        <response name="success" type="request" value="json" />
        <response name="error" type="request" value="json" />
    </request-map>

   	<!-- 查询用户信息 -->
	<request-map uri="findPerson">
		<security https="false" auth="false" />
    	<event type="service" invoke="findPersonInfo"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>


    <!-- 平台注册 -->
    <request-map uri="userAppRegister">
        <security https="false" auth="false" />
        <event type="service" invoke="userAppRegister"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>


    <!-- Ajax 判断是否已注册用户 -->
    <request-map uri="isUserLoginExsits">
        <security https="false" auth="false" />
        <event type="service" invoke="isUserLoginExsits"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>


    <!-- 验证码发送申请 To Login Logic -->
    <request-map uri="getLoginCaptcha">
        <security https="false" auth="false" />
        <event type="service" invoke="getLoginCaptcha"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>

    <!-- 查询联系人信息 -->
	<request-map uri="findContactInfo">
		<security https="false" auth="false" />
    	<event type="service" invoke="findContactPerson"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 修改地址是的查询界面 -->
	<request-map uri="showPersonAddress">
		<security https="false" auth="false" />
    	<event type="service" invoke="showPersonAddress"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 修改联系方式 -->
	<request-map uri="editPersonAddress">
		<security https="false" auth="false" />
    	<event type="service" invoke="editPersonAddress"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 获取联系人列表 -->
	<request-map uri="findContacts">
		<security https="false" auth="false" />
    	<event type="service" invoke="findContactsInfo"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 添加联系人 -->
	<request-map uri="addContacts">
		<security https="false" auth="false" />
    	<event type="service" invoke="addContacts"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 删除联系人 -->
	<request-map uri="deleteContacts">
		<security https="false" auth="false" />
    	<event type="service" invoke="deleteContacts"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 更新联系人 -->
	<request-map uri="updateContacts">
		<security https="false" auth="false" />
    	<event type="service" invoke="updateContacts"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 新建标签 -->
	<request-map uri="createLable">
		<security https="false" auth="false" />
    	<event type="service" invoke="createLable"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 获取全部标签 -->
	<request-map uri="findLable">
		<security https="false" auth="false" />
    	<event type="service" invoke="findLable"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 获取标签内的人员 -->
	<request-map uri="findLablePerson">
		<security https="false" auth="false" />
    	<event type="service" invoke="findLablePerson"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 删除标签 -->
	<request-map uri="deleteLable">
		<security https="false" auth="false" />
    	<event type="service" invoke="deleteLable"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 添加标签内人员 -->
	<request-map uri="addLablePerson">
		<security https="false" auth="false" />
    	<event type="service" invoke="addLablePerson"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <!-- 获得省列表 -->
	<request-map uri="getProvince">
		<security https="false" auth="false" />
    	<event type="service" invoke="getProvince"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
   	<!-- 上传头像 -->
    <request-map uri="stream">
    	<security  https="false" auth="false"/>
        <event type="java" path="org.apache.ofbiz.content.data.DataEvents" invoke="serveObjectData"/>
        <response name="success" type="none"/>
        <response name="error" type="view" value="error"/>
        <response name="io-error" type="none"/>
    </request-map>
    
    <!-- 测试接口 -->
    <request-map uri="mainInterface">
    	<security https="false" auth="false"/>
    	<response name="success" type="view" value="mainInterface"/>
   	</request-map>


    <!-- 创建新的标签并且关联到联系人 -->
    <request-map uri="lableAndRelationContact">
        <security https="false" auth="false" />
        <event type="service" invoke="lableAndRelationContact"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>


    <!-- 报名-->
    <request-map uri="translationActivity">
        <security https="false" auth="false" />
        <event type="service" invoke="translationActivity"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>

    <!-- 创建子活动 -->
    <request-map uri="createChildActivity">
        <security https="false" auth="false" />
        <event type="service" invoke="createChildActivity"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>




    <!-- 生成二维码 -->

    <!-- 专属邀请链接 -->
    <request-map uri="sendInvitation">
        <security https="false" auth="false" />
        <event type="service" invoke="sendInvitation"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>



    <!-- View Mappings -->
    <view-map name="main" type="screen" page="component://personContacts/widget/PersonContactsScreens.xml#main"/>
    <view-map name="mainInterface" type="screen" page="component://personContacts/widget/PersonContactsScreens.xml#mainInterface"/>
    
</site-conf>