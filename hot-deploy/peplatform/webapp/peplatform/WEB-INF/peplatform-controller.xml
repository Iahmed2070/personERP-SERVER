<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://ofbiz.apache.org/Site-Conf" xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- Include Common Controller -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <description>PePlatFrom Component Site Configuration File</description>

    <preprocessor>
        <event name="checkTarjetaLogin" type="java" path="com.banfftech.peplatform.common.PeLoginWorker" invoke="checkTarjetaLogin"/>
    </preprocessor>
    <!-- Request Mappings -->
    <request-map uri="main"><security https="true" auth="true"/><response name="success" type="view" value="main"/></request-map>
    
    <!-- View Mappings -->
    <view-map name="main" type="screen" page="component://peplatform/widget/PePlatFromScreens.xml#main"/>
</site-conf>